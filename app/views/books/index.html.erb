<p id="notice"><%= notice %></p>

<h1><%= t('.title', name: Book.model_name.human) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th colspan="3"><%= Book.human_attribute_name(:actions) %></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= image_tag(book.picture_url, width: '100') if book.picture.present? %></td>
        <td><%= link_to t('buttons.show', name: Book.model_name.human), book %></td>
        <td><%= link_to t('buttons.edit', name: Book.model_name.human), edit_book_path(book) %></td>
        <td><%= link_to t('buttons.destroy', name: Book.model_name.human), book, method: :delete, data: { confirm: t('confirm.message', title: book.title) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.create', name: Book.model_name.human), new_book_path %>
